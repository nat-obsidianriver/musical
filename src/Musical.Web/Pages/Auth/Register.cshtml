@page
@model RegisterModel
@{ ViewData["Title"] = "Register"; }

<div class="row justify-content-center">
    <div class="col-md-5">
        <h1 class="h2 mb-4">Create Account</h1>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }

        <form method="post">
            <div class="mb-3">
                <label class="form-label fw-semibold">Your Name</label>
                <input asp-for="DisplayName" class="form-control" placeholder="Jane Smith" required />
                <div class="form-text">This becomes your default folder name.</div>
            </div>
            <div class="mb-3">
                <label class="form-label fw-semibold">Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="you@example.com" required />
            </div>
            <div class="mb-3">
                <label class="form-label fw-semibold">Password</label>
                <input asp-for="Password" type="password" class="form-control" required />
                <div class="form-text">Min 8 characters, with uppercase and a digit.</div>
            </div>
            <div class="mb-4">
                <label class="form-label fw-semibold">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Create Account</button>
        </form>

        <p class="mt-3 text-center small">
            Already have an account? <a asp-page="/Auth/Login">Sign in</a>
        </p>
    </div>
</div>
