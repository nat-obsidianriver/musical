@page
@model ContactModel
@{
    ViewData["Title"] = "Contact";
}

<div class="row justify-content-center">
    <div class="col-md-7">
        <h1 class="h2 mb-4">Contact Us</h1>

        @if (Model.Submitted)
        {
            <div class="alert alert-success">
                Thanks for reaching out! We'll be in touch soon.
            </div>
        }
        else
        {
            <p class="mb-4">Have a question, suggestion, or need help? Fill out the form below and we'll get back to you.</p>

            <form method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control" placeholder="Your name" required />
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="your@email.com" required />
                </div>
                <div class="mb-4">
                    <label asp-for="Message" class="form-label fw-semibold"></label>
                    <textarea asp-for="Message" class="form-control" rows="5"
                              placeholder="Your message..." required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Send Message</button>
            </form>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
